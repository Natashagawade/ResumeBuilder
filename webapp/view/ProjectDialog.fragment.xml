<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.ui.layout.form">
    <Dialog
        id="projectDialog"
        title="Add Project">
        <content>
            <f:SimpleForm
                editable="true"
                layout="ResponsiveGridLayout">
                <f:content>
                    <Label text="{i18n>projectTitleLabel}" required="true" />
                    <Input value="{dialog>/title}" />

                    <Label text="{i18n>projectDescriptionLabel}" />
                    <TextArea
                        value="{dialog>/description}"
                        rows="4"
                        width="100%" />
                    
                    <Label text="{i18n>projectLinkLabel}" />
                    <Input value="{dialog>/link}" placeholder="https://..."/>

                </f:content>
            </f:SimpleForm>
        </content>
        <beginButton>
            <Button
                text="{i18n>saveButton}"
                type="Emphasized"
                press="onSaveProject" />
        </beginButton>
        <endButton>
            <Button
                text="{i18n>cancelButton}"
                press="onCloseProjectDialog" />
        </endButton>
    </Dialog>
</core:FragmentDefinition>
