<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.ui.layout.form">
    <Dialog
        id="experienceDialog"
        title="{i18n>addExperienceTitle}">
        <content>
            <f:SimpleForm
                editable="true"
                layout="ResponsiveGridLayout">
                <f:content>
                    <Label text="{i18n>jobTitleLabel}" required="true" />
                    <Input id="jobTitleInput" value="{dialog>/jobTitle}" />

                    <Label text="{i18n>companyLabel}" required="true" />
                    <Input id="companyInput" value="{dialog>/company}" />

                    <Label text="{i18n>startDateLabel}" />
                    <DatePicker
                        id="startDatePicker"
                        valueFormat="yyyy-MM-dd"
                        displayFormat="long"
                        value="{dialog>/startDate}" />

                    <Label text="{i18n>endDateLabel}" />
                    <DatePicker
                        id="endDatePicker"
                        valueFormat="yyyy-MM-dd"
                        displayFormat="long"
                        value="{dialog>/endDate}" />

                    <Label text="{i18n>descriptionLabel}" />
                    <TextArea
                        id="descriptionTextArea"
                        value="{dialog>/description}"
                        rows="4"
                        width="100%" />
                </f:content>
            </f:SimpleForm>
        </content>
        <beginButton>
            <Button
                text="{i18n>saveButton}"
                type="Emphasized"
                press="onSaveExperience" />
        </beginButton>
        <endButton>
            <Button
                text="{i18n>cancelButton}"
                press="onCloseDialog" />
        </endButton>
    </Dialog>
</core:FragmentDefinition>
